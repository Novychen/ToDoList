<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:theme="@android:style/Theme.Holo.Light.NoActionBar">

    <NumberPicker

        android:id="@+id/RepeatTask_Activity_Picker"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:theme="@android:style/Widget.Holo.Light.GridView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button

        android:id="@+id/RepeatTask_Activity_RepeatDialog_ok"
        style="android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@drawable/ic_button_round_blue"
        android:text="@string/RepeatTask_Activity_RepeatCircleDialog_ok"
        android:textColor="#FDFDFE"
        app:layout_constraintEnd_toEndOf="@+id/RepeatTask_Activity_Picker"
        app:layout_constraintStart_toStartOf="@+id/RepeatTask_Activity_Picker"
        app:layout_constraintTop_toBottomOf="@+id/RepeatTask_Activity_Picker" />

</android.support.constraint.ConstraintLayout>