<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskDue">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/activity_task_due_title"
                    android:layout_width="314dp"
                    android:layout_height="wrap_content"
                    android:background="#8BC34A"
                    android:textAlignment="center"
                    android:textSize="50sp" />

                <Button
                    android:id="@+id/activity_task_due_remove"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="-"
                    android:textColor="#B63B3B"
                    android:textSize="36sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/activity_task_due_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/activity_task_due_date"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/activity_task_due_Note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="italic" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>