<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:foregroundTint="#FFFFFF"
    tools:context=".TaskDue">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:src="#00BCD4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:src="#00BCD4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/activity_task_due_repeat_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:text="title"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/activity_task_due_repeat_icon_label1"
        android:layout_width="18dp"
        android:layout_height="21dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_label_bright_blue"
        app:layout_constraintStart_toStartOf="@+id/activity_task_due_repeat_title"
        app:layout_constraintTop_toBottomOf="@+id/activity_task_due_repeat_title" />

    <ImageView
        android:id="@+id/activity_task_due_repeat_icon_label2"
        android:layout_width="18dp"
        android:layout_height="21dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/ic_label_bright_blue"
        app:layout_constraintBottom_toBottomOf="@+id/activity_task_due_repeat_icon_label1"
        app:layout_constraintStart_toEndOf="@+id/activity_task_due_repeat_label1"
        app:layout_constraintTop_toTopOf="@+id/activity_task_due_repeat_icon_label1" />

    <ImageView
        android:id="@+id/activity_task_due_repeat_icon_label3"
        android:layout_width="18dp"
        android:layout_height="21dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/ic_label_bright_blue"
        app:layout_constraintBottom_toBottomOf="@+id/activity_task_due_repeat_icon_label2"
        app:layout_constraintStart_toEndOf="@+id/activity_task_due_repeat_label2"
        app:layout_constraintTop_toTopOf="@+id/activity_task_due_repeat_icon_label2" />

    <TextView
        android:id="@+id/activity_task_due_repeat_label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:text="label1"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/activity_task_due_repeat_icon_label1"
        app:layout_constraintStart_toEndOf="@+id/activity_task_due_repeat_icon_label1"
        app:layout_constraintTop_toBottomOf="@+id/activity_task_due_repeat_title" />

    <TextView
        android:id="@+id/activity_task_due_repeat_label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="label2"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/activity_task_due_repeat_icon_label2"
        app:layout_constraintStart_toEndOf="@+id/activity_task_due_repeat_icon_label2" />

    <TextView
        android:id="@+id/activity_task_due_repeat_label3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="label3"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/activity_task_due_repeat_icon_label3"
        app:layout_constraintStart_toEndOf="@+id/activity_task_due_repeat_icon_label3" />

    <ImageView
        android:id="@+id/activity_task_due_repeat_boxSnarky"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/ic_button_round_blue"
        app:layout_constraintBottom_toBottomOf="@+id/activity_task_due_repeat_boxBrutal"
        app:layout_constraintStart_toEndOf="@+id/activity_task_due_repeat_boxBrutal"
        app:layout_constraintTop_toTopOf="@+id/activity_task_due_repeat_boxBrutal" />

    <ImageView
        android:id="@+id/activity_task_due_repeat_boxCute"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/ic_button_round_blue"
        app:layout_constraintBottom_toBottomOf="@+id/activity_task_due_repeat_boxFunny"
        app:layout_constraintStart_toEndOf="@+id/activity_task_due_repeat_boxFunny"
        app:layout_constraintTop_toTopOf="@+id/activity_task_due_repeat_boxFunny" />

    <ImageView
        android:id="@+id/activity_task_due_repeat_boxFunny"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/ic_button_round_blue"
        app:layout_constraintBottom_toBottomOf="@+id/activity_task_due_repeat_boxSnarky"
        app:layout_constraintStart_toEndOf="@+id/activity_task_due_repeat_boxSnarky"
        app:layout_constraintTop_toTopOf="@+id/activity_task_due_repeat_boxSnarky" />

    <ImageView
        android:id="@+id/activity_task_due_repeat_boxBrutal"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/ic_button_round_blue"
        app:layout_constraintStart_toStartOf="@+id/activity_task_due_repeat_icon_label1"
        app:layout_constraintTop_toBottomOf="@+id/activity_task_due_repeat_date" />

    <ImageView
        android:id="@+id/activity_task_due_repeat_boxNo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/ic_button_round_blue"
        app:layout_constraintBottom_toBottomOf="@+id/activity_task_due_repeat_boxNormal"
        app:layout_constraintStart_toEndOf="@+id/activity_task_due_repeat_boxNormal"
        app:layout_constraintTop_toTopOf="@+id/activity_task_due_repeat_boxNormal" />

    <ImageView
        android:id="@+id/activity_task_due_repeat_boxNormal"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/ic_button_round_blue"
        app:layout_constraintBottom_toBottomOf="@+id/activity_task_due_repeat_boxCute"
        app:layout_constraintStart_toEndOf="@+id/activity_task_due_repeat_boxCute"
        app:layout_constraintTop_toTopOf="@+id/activity_task_due_repeat_boxCute" />

    <ImageView
        android:id="@+id/activity_task_due_repeat_brutal"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:background="@drawable/ic_brutalmotivation"
        app:layout_constraintBottom_toBottomOf="@+id/activity_task_due_repeat_boxBrutal"
        app:layout_constraintEnd_toEndOf="@+id/activity_task_due_repeat_boxBrutal"
        app:layout_constraintStart_toStartOf="@+id/activity_task_due_repeat_boxBrutal"
        app:layout_constraintTop_toTopOf="@+id/activity_task_due_repeat_boxBrutal" />

    <ImageView
        android:id="@+id/activity_task_due_repeat_cute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_cutemotivation"
        app:layout_constraintBottom_toBottomOf="@+id/activity_task_due_repeat_boxCute"
        app:layout_constraintEnd_toEndOf="@+id/activity_task_due_repeat_boxCute"
        app:layout_constraintStart_toStartOf="@+id/activity_task_due_repeat_boxCute"
        app:layout_constraintTop_toTopOf="@+id/activity_task_due_repeat_boxCute" />

    <ImageView
        android:id="@+id/activity_task_due_repeat_normal"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/ic_notification_active"
        app:layout_constraintBottom_toBottomOf="@+id/activity_task_due_repeat_boxNormal"
        app:layout_constraintEnd_toEndOf="@+id/activity_task_due_repeat_boxNormal"
        app:layout_constraintStart_toStartOf="@+id/activity_task_due_repeat_boxNormal"
        app:layout_constraintTop_toTopOf="@+id/activity_task_due_repeat_boxNormal" />

    <ImageView
        android:id="@+id/activity_task_due_repeat_funny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_funnymotivation"
        app:layout_constraintBottom_toBottomOf="@+id/activity_task_due_repeat_boxFunny"
        app:layout_constraintEnd_toEndOf="@+id/activity_task_due_repeat_boxFunny"
        app:layout_constraintStart_toStartOf="@+id/activity_task_due_repeat_boxFunny"
        app:layout_constraintTop_toTopOf="@+id/activity_task_due_repeat_boxFunny" />

    <ImageView
        android:id="@+id/activity_task_due_repeat_snarky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_snarkymotivation"
        app:layout_constraintBottom_toBottomOf="@+id/activity_task_due_repeat_boxSnarky"
        app:layout_constraintEnd_toEndOf="@+id/activity_task_due_repeat_boxSnarky"
        app:layout_constraintStart_toStartOf="@+id/activity_task_due_repeat_boxSnarky"
        app:layout_constraintTop_toTopOf="@+id/activity_task_due_repeat_boxSnarky" />

    <ImageView
        android:id="@+id/activity_task_due_repeat_no"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:background="@drawable/ic_notifications_off"
        app:layout_constraintBottom_toBottomOf="@+id/activity_task_due_repeat_boxNo"
        app:layout_constraintEnd_toEndOf="@+id/activity_task_due_repeat_boxNo"
        app:layout_constraintStart_toStartOf="@+id/activity_task_due_repeat_boxNo"
        app:layout_constraintTop_toTopOf="@+id/activity_task_due_repeat_boxNo" />

    <TextView
        android:id="@+id/activity_task_due_repeat_des"
        android:layout_width="0dp"
        android:layout_height="164dp"
        android:layout_marginTop="24dp"
        android:text="This is a text to demonstrate the effect of the describe field"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/activity_task_due_repeat_boxNo"
        app:layout_constraintStart_toStartOf="@+id/activity_task_due_repeat_boxBrutal"
        app:layout_constraintTop_toBottomOf="@+id/activity_task_due_repeat_boxFunny" />

    <ImageView
        android:id="@+id/activity_task_due_repeat_remove"
        android:layout_width="47dp"
        android:layout_height="56dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/ic_delete"
        app:layout_constraintBottom_toBottomOf="@+id/imageView22"
        app:layout_constraintEnd_toEndOf="@+id/activity_task_due_repeat_funny"
        app:layout_constraintTop_toTopOf="@+id/imageView22" />

    <ImageView
        android:id="@+id/activity_task_due_repeat_back"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/ic_cancel"
        app:layout_constraintBottom_toBottomOf="@+id/activity_task_due_repeat_remove"
        app:layout_constraintStart_toStartOf="@+id/activity_task_due_repeat_cute"
        app:layout_constraintTop_toTopOf="@+id/activity_task_due_repeat_remove" />

    <TextView
        android:id="@+id/activity_task_due_repeat_date"
        android:layout_width="266dp"
        android:layout_height="34dp"
        android:layout_marginTop="24dp"
        android:text="XX"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/activity_task_due_repeat_title"
        app:layout_constraintTop_toBottomOf="@+id/activity_task_due_repeat_label1" />

</android.support.constraint.ConstraintLayout>
